{
    "manifest_version": 3,
    "name": "CatNote",
    "version": "1.0",
    "description": "Simple, no-login safe open-source notes app.",
    "icons": {
      "128": "./resources/icon128.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "128": "./resources/icon128.png"
      }
    },
    "permissions": [
      "storage",
      "activeTab"
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self'; style-src 'self' https://cdn.jsdelivr.net/ https://fonts.googleapis.com/; object-src 'self'"
    }        
  }
  